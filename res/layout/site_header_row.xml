    <TextView
        android:id="@+id/pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM 2.5"
        android:textColor="#ffffff"
        android:width="70dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
